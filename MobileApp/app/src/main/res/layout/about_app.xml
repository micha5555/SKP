<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/image"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-100dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ellipse_3"
        tools:layout_editor_absoluteX="314dp"
        tools:layout_editor_absoluteY="7dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ellipse_1"
        tools:layout_editor_absoluteX="-112dp"
        tools:layout_editor_absoluteY="-84dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ellipse_2"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="-83dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="745dp"
        android:layout_height="757dp"
        app:srcCompat="@drawable/decision_menu_about_system"
        tools:layout_editor_absoluteX="-167dp"
        tools:layout_editor_absoluteY="255dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/about_app_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imageView7"
        app:layout_constraintEnd_toEndOf="@id/imageView7"
        app:layout_constraintTop_toTopOf="@id/imageView7"
        android:layout_marginTop="10dp"
        android:text="O aplikacji"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:text="About app bla bla bla bla bla bla bla hkeieruhtiuerstiuerhi uteriuerioughredsiu htiuershgeTODO"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_app_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imageView7"
        app:layout_constraintEnd_toEndOf="@id/imageView7"
        app:layout_constraintTop_toTopOf="@id/imageView7"
        android:layout_marginTop="10dp"
        android:text="O aplikacji"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <ImageButton
        android:id="@+id/back_button_on_aboutapp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/button_shape"
        tools:layout_editor_absoluteY="600dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/about_system_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wstecz"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/back_button_on_aboutapp_view"
        app:layout_constraintEnd_toEndOf="@+id/back_button_on_aboutapp_view"
        app:layout_constraintStart_toStartOf="@+id/back_button_on_aboutapp_view"
        app:layout_constraintTop_toTopOf="@+id/back_button_on_aboutapp_view" />

</androidx.constraintlayout.widget.ConstraintLayout>